<%- model_class = Similarity -%>
<div class="page-header">
  <h1>相似度</h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:score) %></dt>
      <dd><pre class="prettyprint"><%= @similarity.score %></pre>

      </dd>
      <dt class="label label-default"><%= @similarity.user.name %></dt>
      <dd>
      <tbody>
    <% @similarity.user.pushes.each do |push| %>
      <tr>
        
        <td><%= push.body%></td><br>
      
      </tr>
    <% end %>
  </tbody>


      </dd>
      <dt class="label label-default"><%= @similarity.partner %></dt>
      <dd>
              <tbody>
    <% User.find_by(name:@similarity.partner).pushes.each do |push| %>
      <tr>
        
        <td><%= push.body%></td><br>
      
      </tr>
    <% end %>
  </tbody>


      </dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              similarities_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_similarity_path(@similarity), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              similarity_path(@similarity),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

