<%- model_class = Similarity -%>
<div class="page-header">
  <h1><%=t '.title', :default => Similarity %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
     
      <th><%= model_class.human_attribute_name(:score) %></th>
   
      <th><%= model_class.human_attribute_name("鄉民A") %></th>
      <th><%= model_class.human_attribute_name("鄉民B") %></th>
    
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @similarities.each do |similarity| %>
      <tr>
        
        <td><%= link_to similarity.score, similarity_path(similarity) %></td>
        <td><%= link_to similarity.user.name, user_path(similarity.user) %></td>
        <td><%= link_to similarity.partner, user_path(User.find_by(name:similarity.partner )) %></td>
    
        <td>
          <%= link_to similarity_path(similarity), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to similarity_path(similarity), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_similarity_path,
            :class => 'btn btn-primary' %>
